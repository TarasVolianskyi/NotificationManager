<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <!-- android:background="@drawable/background"-->
    <!-- this is a comment -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_test_text" />

            <Button
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sendOnChannel1"
                android:text="Send on Channel 1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sendOnChannel2"
                android:text="Send on Channel 2"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:id="@+id/layout_start_main_activit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_list"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="18"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_weight="18"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@color/black"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/tv_minus_main_activity"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="60dp"
                                    android:textColor="@color/neonBlue"
                                    android:text="-" />


                                <TextView
                                    android:id="@+id/tv_num_of_words_main_activity"
                                    android:layout_width="0dp"
                                    android:textSize="30dp"
                                    android:textStyle="bold|italic"
                                    android:text="3 words"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:textColor="@color/neonBlue"

                                    />

                                <TextView
                                    android:id="@+id/tv_plus_main_activity"
                                    android:layout_width="0dp"
                                    android:textSize="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/neonBlue"
                                    android:text="+" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" />

                            </LinearLayout>


                            <SeekBar
                                android:id="@+id/seekBar2"
                                style="@style/Widget.AppCompat.SeekBar.Discrete"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="5"
                                android:padding="30dp"
                                android:progress="1" />

                            <TextView
                                android:id="@+id/txtViewseek"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_horizontal"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/iv_de_language_main_activity"
                                    android:layout_width="0dp"
                                    android:src="@drawable/de"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/iv_fr_language_main_activity"
                                    android:layout_width="0dp"
                                    android:src="@drawable/fr"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/iv_en_language_main_activity"
                                    android:layout_width="0dp"
                                    android:src="@drawable/en"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/iv_es_language_main_activity"
                                    android:layout_width="0dp"
                                    android:src="@drawable/es"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                            </LinearLayout>


                            <Button
                                android:visibility="gone"
                                android:id="@+id/btn_second_start"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="start" />

                            <EditText
                                android:visibility="gone"
                                android:id="@+id/editText2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="time" />

                            <AutoCompleteTextView
                                android:visibility="gone"
                                android:id="@+id/autoCompleteTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="AutoCompleteTextView" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_spart_play_activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/view_main_activity"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <ImageView
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/iv_spart_play_activity_main"
                    android:src="@drawable/ew" />

                <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/frame_layout_main_activity"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@color/neonBlue"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <VideoView
                        android:id="@+id/video_view"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />

                </FrameLayout>


                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_start_main_activity"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:background="@drawable/gradient_list"
                    android:padding="6dp"
                    android:shadowColor="@color/colorPrimary"
                    android:text="Start"
                    android:textColor="#D60B0B"
                    android:textSize="50dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <Button
                android:visibility="gone"
                android:id="@+id/btn_pause_main_activity"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Pause"
                android:padding="20dp"
                android:background="@drawable/gradient_list" />

            <EditText
                android:visibility="gone"
                android:id="@+id/edit_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title" />

            <EditText
                android:visibility="gone"
                android:id="@+id/edit_text_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message" />


        </LinearLayout>


    </LinearLayout>

    <ListView
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_weight="0"
        android:layout_height="wrap_content"
        android:id="@+id/list_of_words_main_activity" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3623739700338204/6391104605"></com.google.android.gms.ads.AdView>

</LinearLayout>